<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">

    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/friend_row_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:corner_radius="10dp"
        android:contentDescription="@string/connect_icon"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:cropToPadding="true"/>

    <TextView
        android:id="@+id/friend_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/friend_row_icon"
        android:layout_toEndOf="@id/friend_row_icon"/>

    <TextView
        android:id="@+id/friend_row_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"/>

    <ImageView
        android:id="@+id/friend_row_connect"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/bg_addfriend"
        android:focusable="false"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/friend_row_accept"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/friend_row_deny"
        android:layout_toLeftOf="@+id/friend_row_deny"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/bg_granted"
        android:focusable="false"
        android:visibility="gone"/>

    <ImageView
        android:id="@id/friend_row_deny"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/bg_deny"
        android:focusable="false"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/friend_row_delete"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/bg_unfriend"
        android:focusable="false"
        android:visibility="gone"/>

</RelativeLayout>